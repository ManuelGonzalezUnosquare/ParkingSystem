{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "customConditions": null,
    "types": ["jest", "node"],
    "strictPropertyInitialization": false
  },
  "include": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/test/jest.setup.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
